<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
                                         "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>
		<property name="hibernate.connection.datasource">java:comp/env/jdbc/TeamProject</property>
		<property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
<!-- 		<property name="hibernate.show_sql">true</property> -->
<!-- 		<property name="hibernate.format_sql">true</property> -->

		<!-- 跟 getCurrentSession 配合 -->
		<property name="hibernate.current_session_context_class">thread</property>

		<mapping class="member.bean.Member" />
		<mapping class="Food.model.MapData" />
		<mapping class="Coupon.model.QuestionnaireBean" />
		<mapping class="recipe.model.RecipeBean" />
		<mapping class="recipe.model.UserRecipeBean" />
	</session-factory>
</hibernate-configuration>
